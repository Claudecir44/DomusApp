<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:id="@+id/textTituloMorador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastro de Morador"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black"/>

        <!-- Código -->
        <TextView
            android:id="@+id/textCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cod: 001"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <!-- Imagem -->
        <ImageView
            android:id="@+id/imageMorador"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@android:drawable/ic_menu_camera"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="Foto do Morador" />

        <!-- Campos do formulário -->

        <EditText
            android:id="@+id/editNome"
            android:hint="Nome do Morador"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editCPF"
            android:hint="CPF"
            android:inputType="number"
            android:digits="0123456789"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editEmail"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editRua"
            android:hint="Rua"
            android:inputType="textPostalAddress"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editNumero"
            android:hint="Número"
            android:inputType="number"
            android:digits="0123456789"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editTelefone"
            android:hint="Telefone"
            android:inputType="phone"
            android:digits="0123456789+-()"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editQuadra"
            android:hint="Quadra"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editLote"
            android:hint="Lote"
            android:inputType="number"
            android:digits="0123456789"
            android:imeOptions="actionDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <!-- Botão salvar -->
        <Button
            android:id="@+id/btnSalvar"
            android:text="Salvar Morador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
