<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".RegistroOcorrenciasActivity">

        <!-- Título -->
        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Registrar Ocorrências"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tipo/Nome da ocorrência -->
        <EditText
            android:id="@+id/editTipo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Tipo/Nome da Ocorrência"
            android:inputType="textCapWords"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Data e hora da ocorrência -->
        <EditText
            android:id="@+id/editDataHora"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Data e hora"
            android:focusable="false"
            android:clickable="true"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/editTipo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nome dos envolvidos -->
        <LinearLayout
            android:id="@+id/layoutEnvolvidos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/editDataHora"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do envolvido 1"
                android:textSize="14sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do envolvido 2"
                android:textSize="14sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do envolvido 3"
                android:textSize="14sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do envolvido 4"
                android:textSize="14sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do envolvido 5"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Descrição da ocorrência -->
        <EditText
            android:id="@+id/editDescricao"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:hint="Descrição da ocorrência"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/layoutEnvolvidos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botão anexar arquivos -->
        <Button
            android:id="@+id/buttonAnexarArquivos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Anexar arquivos (PDF, Word, Excel)"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/editDescricao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Lista de arquivos anexados -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAnexos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/buttonAnexarArquivos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botão salvar -->
        <Button
            android:id="@+id/buttonSalvar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Salvar Ocorrência"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/recyclerAnexos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botão lista de ocorrências -->
        <Button
            android:id="@+id/buttonListaOcorrencias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lista de Ocorrências"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/buttonSalvar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
