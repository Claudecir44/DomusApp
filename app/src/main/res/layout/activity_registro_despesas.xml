<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro de Despesas"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editDataHoraDespesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data e Hora"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editNomeDespesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome da Despesa"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editDescricaoDespesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrição"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editValorDespesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnAnexarNota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anexar Nota"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnSalvarDespesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnListaDespesas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Despesas"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</ScrollView>
