<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FuncionariosActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/textTituloFuncionarios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gestão de Funcionários"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Botão Cadastro Funcionário -->
    <Button
        android:id="@+id/buttonCadastroFuncionario"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Cadastro de Funcionário"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/botaoCameras"
        app:layout_constraintTop_toBottomOf="@id/textTituloFuncionarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- Botão Lista de Funcionários -->
    <Button
        android:id="@+id/buttonListaFuncionarios"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Lista de Funcionários"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/botaoCameras"
        app:layout_constraintTop_toBottomOf="@id/buttonCadastroFuncionario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
